# Database Configuration (Use PlanetScale, Neon, or Railway for MySQL)
DATABASE_URL=mysql://user:password@host:port/database?ssl={"rejectUnauthorized":true}

# JWT Secrets (Generate with: openssl rand -hex 32)
JWT_SECRET=your-jwt-secret-here
JWT_REFRESH_SECRET=your-jwt-refresh-secret-here

# OAuth Configuration (Manus)
BUILT_IN_OAUTH_SERVER_URL=https://api.manus.computer
VITE_APP_ID=your-app-id

# Storage (AWS S3)
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret
AWS_REGION=us-east-1
AWS_BUCKET_NAME=your-bucket-name

# AI/LLM (Forge API)
BUILT_IN_FORGE_API_URL=https://forge.manus.computer
BUILT_IN_FORGE_API_KEY=your-forge-api-key

# Email (SendGrid)
SENDGRID_API_KEY=your-sendgrid-api-key
SENDGRID_WEBHOOK_SECRET=your-webhook-secret
FROM_EMAIL=noreply@yourdomain.com

# WhatsApp (Optional)
WHATSAPP_VERIFY_TOKEN=your-verify-token
WHATSAPP_ACCESS_TOKEN=your-access-token
WHATSAPP_BUSINESS_ACCOUNT_ID=your-business-account-id
WHATSAPP_PHONE_NUMBER_ID=your-phone-number-id

# Feature Flags (Optional - defaults to false)
FEATURE_EMAIL_INGESTION=false
FEATURE_WHATSAPP=false
FEATURE_LINKING=false
FEATURE_EXPORT_DD_PACK=false
FEATURE_VATR_EDIT=false
FEATURE_ENTITY_RESOLUTION=false
FEATURE_TWO_FA_DISABLE=false

# Application
NODE_ENV=production
PORT=3000

# Vercel Specific (Auto-populated by Vercel)
# VERCEL_URL=your-deployment-url.vercel.app
# VERCEL_ENV=production